<?xml version="1.0" encoding="utf-8" ?>
<selector
xmlns:android="http://schemas.android.com/apk/res/android">

  //You can change the color of the edit text here which removes the border line as well
  <item android:state_focused="true" >
    <shape android:shape="rectangle">
      <gradient
          android:startColor="#547A82"
          android:endColor="#547A82"
          android:angle="90" />
      <stroke
          android:width="5dp"
          android:color="#547A82" />
      <corners
          android:radius="5dp" />
    </shape>
  </item>
  <item>
    <shape android:shape="rectangle">
      <gradient
          android:startColor="#547A82"
          android:endColor="#547A82"
          android:angle="90" />
      <stroke
          android:width="5dp"
          android:color="#547A82" />
      <corners
          android:radius="5dp" />
    </shape>
  </item>
</selector>